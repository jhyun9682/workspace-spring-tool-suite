		P_NO                          		NUMBER(10)		 NULL 
);

DROP SEQUENCE REVIEW_R_NO_SEQ;

CREATE SEQUENCE REVIEW_R_NO_SEQ NOMAXVALUE NOCACHE NOORDER NOCYCLE;


CREATE TABLE IMAGE(
		IM_NO                         		NUMBER(10)		 NULL ,
		IM_DIV                        		VARCHAR2(30)		 NULL ,
