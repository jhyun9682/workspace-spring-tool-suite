CREATE TABLE REVIEW(
		R_NO                          		NUMBER(10)		 NULL ,
		R_DATE                        		DATE		 NULL ,
		R_CONTENT                     		VARCHAR2(1000)		 NULL ,
		R_TITLE                       		VARCHAR2(50)		 NULL ,
		R_SCORE                       		NUMBER(1)		 DEFAULT 0		 NULL ,
